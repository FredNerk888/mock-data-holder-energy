{
	"ConnectionStrings": {
		"DataHolder_Energy_DB": "Server=(localdb)\\MSSQLLocalDB;Database=cdr-mdhe;Integrated Security=true",
		"DataHolder_Energy_Logging_DB": "Server=(localdb)\\MSSQLLocalDB;Database=cdr-mdhe;Integrated Security=true",
		"DataHolder_Energy_IDP_DB": "Server=(localdb)\\MSSQLLocalDB;Database=cdr-idsvre;Integrated Security=true",
		"DataHolder_Energy_IDP_Migrations_DB": "Server=(localdb)\\MSSQLLocalDB;Database=cdr-idsvre;Integrated Security=true"
	},
	"Serilog": {
		"Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.MSSqlServer" ],
		"MinimumLevel": "Debug",
		"WriteTo": [
			{
				"Name": "Console",
				"Args": {
					"outputTemplate": "{Timestamp:HH:mm:ss.fff zzz} {Level} [{SourceContext}] {Message}{NewLine}{Exception}"
				}
			},
			{
				"Name": "MSSqlServer",
				"Args": {
					"connectionString": "DataHolder_Energy_Logging_DB",
					"sinkOptionsSection": {
						"tableName": "LogEvents-IdentityServer",
						"autoCreateSqlTable": true
					},
					"restrictedToMinimumLevel": "Verbose",
					"batchPostingLimit": 1000,
					"period": "0.00:00:10",
					"columnOptionsSection": {
						"disableTriggers": true,
						"clusteredColumnstoreIndex": false,
						"primaryKeyColumnName": "Id",
						"removeStandardColumns": [ "MessageTemplate", "Properties" ],
						"additionalColumns": [
							{
								"ColumnName": "Environment",
								"DataType": "nvarchar",
								"AllowNull": true,
								"DataLength": 50
							},
							{
								"ColumnName": "ProcessId",
								"DataType": "nvarchar",
								"AllowNull": true,
								"DataLength": 50
							},
							{
								"ColumnName": "ProcessName",
								"DataType": "nvarchar",
								"AllowNull": true,
								"DataLength": 50
							},
							{
								"ColumnName": "ThreadId",
								"DataType": "nvarchar",
								"AllowNull": true,
								"DataLength": 50
							},
							{
								"ColumnName": "MethodName",
								"DataType": "nvarchar",
								"AllowNull": true,
								"DataLength": 50
							},
							{
								"ColumnName": "SourceContext",
								"DataType": "nvarchar",
								"AllowNull": true,
								"DataLength": 100
							}
						]
					}
				}
			}
		]
	},
	"IssuerUri": "https://localhost:8101",
	"JwksUri": "https://localhost:8101/.well-known/openid-configuration/jwks",
	"AuthorizeUri": "https://localhost:8101/connect/authorize",
	"TokenUri": "https://localhost:8102/connect/token",
	"IntrospectionUri": "https://localhost:8102/connect/introspect",
	"UserinfoUri": "https://localhost:8102/connect/userinfo",
	"RegisterUri": "https://localhost:8102/connect/register",
	"ParUri": "https://localhost:8102/connect/par",
	"RevocationUri": "https://localhost:8102/connect/revocation",
	"ArrangementRevocationUri": "https://localhost:8102/connect/arrangements/revoke",
	"Register": {
		"SsaJwksUri": "https://localhost:7000/cdr-register/v1/jwks"
	},
	"Registration": {
		"AudienceUri": "https://localhost:8101"
	}
}